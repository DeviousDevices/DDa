<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
  <moduleName>Devious Devices: Assets 2.8.2</moduleName>
  <moduleImage path="fomod\images\header.png"/>
  <installSteps order="Explicit">

    <installStep name="Body Type">
      <optionalFileGroups>
        <group name="Which body type do you use?" type="SelectExactlyOne">
          <plugins order="Explicit">
            <plugin name="CBBE Curvy">
              <description>
                Install CBBE version (based on CBBE 3.2.3 Curvy)
              </description>
              <image path="fomod\images\01_cbbe.png"/>
              <files>
                <folder source="00 Core" destination="" priority="1"/>
                <folder source="01 CBBE" destination="" priority="2"/>
              </files>
              <conditionFlags>
                <flag name="CBBE">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="UNP Skinny">
              <description>
                Install UNPB version tweaked for UNP 1.2 Skinny (based on UNP 1.2 Skinny)
              </description>
              <image path="fomod\images\01_unp_s.png"/>
              <files>
                <folder source="00 Core" destination="" priority="1"/>
                <folder source="01 UNPB" destination="" priority="2"/>
                <folder source="01_UNP Skinny" destination="" priority="3"/>
              </files>
              <conditionFlags>
                <flag name="UNP_S">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="UNPB">
              <description>
                Install UNPB version (based on UNPB 2.5.2)
              </description>
              <image path="fomod\images\01_unpb.png"/>
              <files>
                <folder source="00 Core" destination="" priority="1"/>
                <folder source="01 UNPB" destination="" priority="2"/>
              </files>
              <conditionFlags>
                <flag name="UNPB">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
  	      </plugins>
        </group>
      </optionalFileGroups>
    </installStep>

    <installStep name="Jiggle Support">
      <visible>
        <flagDependency flag="CBBE" value="On" />        
      </visible>
      <optionalFileGroups>
        <group name="Select nipple piercing placement" type="SelectExactlyOne">
          <plugins order="Explicit">
            <plugin name="Default">
              <description>
                Piercings will fit the default CBBE 3.2.3 (Curvy) body.
              </description>
              <image path="fomod\images\02_default.png"/>
              <files>
                <folder source="no folder" destination=""/>
              </files>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="BBP">
              <description>
                Piercings will fit the CBBE bodyslide2 BBP body (requires a bbp-compatible skeleton)
              </description>
              <image path="fomod\images\02_bbp.png"/>
              <files>
                <folder source="02 BBP (CBBE)" destination=""/>
              </files>
              <conditionFlags>
                <flag name="BBP">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="TBBP">
              <description>
                Piercings will fit the CBBE bodyslide2 TBBP body (requires a tbbp-compatible skeleton)
              </description>
              <image path="fomod\images\02_tbbp.png"/>
              <files>
                <folder source="02 TBBP (CBBE)" destination=""/>
              </files>
              <conditionFlags>
                <flag name="TBBP">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
  	      </plugins>
		    </group>
      </optionalFileGroups>
    </installStep>

    <installStep name="Jiggle Support">
      <visible>
        <flagDependency flag="UNP_S" value="On" />        
      </visible>
      <optionalFileGroups>
        <group name="Select nipple piercing placement" type="SelectExactlyOne">
          <plugins order="Explicit">
            <plugin name="Default">
              <description>
                Piercings will fit the default UNP 1.2 (Skinny) body.
              </description>
              <image path="fomod\images\02_default.png"/>
              <files>
                <folder source="no folder" destination=""/>
              </files>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="TBBP">
              <description>
                Piercings will fit the UNP 1.2 (Skinny) TBBP body (requires a tbbp-compatible skeleton).
              </description>
              <image path="fomod\images\02_tbbp.png"/>
              <files>
                <folder source="02 TBBP (UNP Skinny)" destination="" priority="3"/>
              </files>
              <conditionFlags>
                <flag name="TBBP">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
          </plugins>
        </group>
      </optionalFileGroups>
    </installStep>

    <installStep name="Jiggle Support">
      <visible>
        <flagDependency flag="UNPB" value="On" />        
      </visible>
      <optionalFileGroups>
        <group name="Select nipple piercing placement" type="SelectExactlyOne">
          <plugins order="Explicit">
            <plugin name="Default">
              <description>
                Piercings will fit the default UNPB 2.5.2 body.
              </description>
              <image path="fomod\images\02_default.png"/>
              <files>
                <folder source="no folder" destination=""/>
              </files>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="BBP">
              <description>
                Piercings will fit the UNPB 2.5.2 BBP body (requires a bbp-compatible skeleton).
              </description>
              <image path="fomod\images\02_bbp.png"/>
              <files>
                <folder source="02 BBP (UNPB)" destination=""/>
              </files>
              <conditionFlags>
                <flag name="BBP">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="TBBP">
              <description>
                Piercings will fit the UNPB 2.5.2 TBBP body (requires a tbbp-compatible skeleton).
              </description>
              <image path="fomod\images\02_tbbp.png"/>
              <files>
                <folder source="02 TBBP (UNPB)" destination=""/>
              </files>
              <conditionFlags>
                <flag name="TBBP">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
            <plugin name="TBBP 2.5g">
              <description>
                Piercings will fit the UNPB 2.5g TBBP body (requires a tbbp-compatible skeleton).
              </description>
              <image path="fomod\images\02_tbbp25g.png"/>
              <files>
                <folder source="02 TBBP 2-5g (UNPB)" destination=""/>
              </files>
              <conditionFlags>
                <flag name="TBBP25G">On</flag>
              </conditionFlags>
              <typeDescriptor><type name="Optional"/></typeDescriptor>
            </plugin>
          </plugins>
        </group>
      </optionalFileGroups>
    </installStep>
  </installSteps>
</config>
